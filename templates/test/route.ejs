var request = require('supertest');
var chai = require('chai');
var expect = chai.expect;
var app = require('../../app');
var id, item;

describe('Routes for {name}:', function () {

    before(function () {
        app.listen(3000);
    });

    it('#index GET /{prefix}/{namePluralized}', function (done) {
        request(app)
            .get('/{prefix}/{namePluralized}')
            .set('Accept', 'application/json')
            .expect('Content-Type', /json/)
            .expect(200)
            .end(function (err, res) {
                if (err) return done(err);

                done();
            });
    });

    it('#create POST /{prefix}/{namePluralized}', function (done) {
        request(app)
            .post('/{prefix}/{namePluralized}')
            // .field('name', 'my awesome avatar')
            .set('Accept', 'application/json')
            .expect(201)
            .end(function (err, res) {
                if (err) return done(err);
                item = res.body;
                console.log(res, item)
                done();
            });
    });

    it('#show GET /{prefix}/{namePluralized}/' + item.id, function (done) {
        request(app)
            .get('/{prefix}/{namePluralized}/' + item.id)
            .set('Accept', 'application/json')
            .expect(200)
            .end(function (err, res) {
                if (err) return done(err);

                done();
            });
    });

    it('#update PUT /{prefix}/{namePluralized}/' + item.id, function (done) {
        request(app)
            .put('/{prefix}/{namePluralized}/' + item.id)
            .set('Accept', 'application/json')
            .expect(200)
            .end(function (err, res) {
                if (err) return done(err);

                done();
            });
    });


